pipeline {
    agent any
	tools {
            maven "maven"
        }
		stage('test') {
            steps {
                sh "mvn test"
            }
        }
		stage('build') {
            steps {
                sh "mvn package"
            }
        }
		stage('deploy') {
            steps {
                deploy adapters: [tomcat9(credentialsId: 'tomcat10', path: '', url: 'http://15.206.170.62:8080')], contextPath: '/app', war: '**/*.war'
            }
        }
    }
}

