pipeline {
    agent any
		tools {
			maven "maven"
			}
    stages {
        stage('test') {
            steps {
                sh "mvn test"
            }
        }
		stage('build') {
            steps {
                sh "mvn package"
            }
        }
		stage('deploy') {
            steps {
                deploy adapters: [tomcat9(credentialsId: 'tomcat1', path: '', url: 'http://15.206.170.62:8080')], contextPath: '/app', war: '**/*.war'
            }
        }
    }
}
